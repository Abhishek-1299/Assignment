<%= form_with(model: course, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.text_area :duration %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
