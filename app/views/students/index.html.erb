<h1>All Students</h1>
<h5><%= link_to 'New Student', new_student_path %><br></h5>

<%= form_with url: '/students', method: :get, local: true do |form| %>
	<div class="form-group">
		<%= form.label :Type_keywords %>
		<%= form.text_field :keyword, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= form.submit "Search", class: "btn btn-primary btn-lg"%>	
	</div>
<% end %>

<style>
	table {
		font-family: Arial, sans-serif;
		border-collapse: collapse;
		width: 100%;
	}
	th, td {
		text-align: left;
		padding: 8px;
	}
	th {
		background-color: #4CAF50;
		color: white;
	}
	tr:nth-child(even) {
		background-color: #f2f2f2;
	}
	a {
		color: #4CAF50;
		text-decoration: none;
	}
	a:hover {
		color: #333;
	}
</style> 

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Course_name</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% (@students||[]).each do |student| %>
			<tr>
				<td><%= student.name %></td>
				<td><%= student.course.name %></td>
				<td><%= link_to 'View', student %></td>
				<td><%= link_to 'Edit', edit_student_path(student) %></td>
				<td><%= link_to "Destroy", student_path(student), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Back', welcome_path %>